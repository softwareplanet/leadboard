{
  "parser": "babel-eslint",
  "parserOptions": {
      "ecmaVersion": 6,
      "sourceType": "module",
      "ecmaFeatures": {
          "jsx": true,
          "modules": true,
          "experimentalObjectRestSpread": true
      }
  },
  "rules": {
    "quotes": [
      "warn",
      "double"
    ],
    "indent": ["warn", 2],
    "no-dupe-args": "warn",
    "no-dupe-keys": "warn",
    "no-unreachable": "warn",
    "use-isnan": "warn",
    "eqeqeq": "warn",
    "no-alert": "warn",
    "no-empty-function": "warn",
    "no-extra-bind": "warn",
    "no-unused-vars": "warn",
    "camelcase": "warn",
    "eol-last": "warn",
    "jsx-quotes": ["warn", "prefer-double"],
    "react/prefer-stateless-function": "off",
    "react/jsx-filename-extension": [ 1, {
         "extensions": [".js", ".jsx"] 
        }
    ]
  }
}