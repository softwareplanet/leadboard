{
  "parser": "babel-eslint",
  "parserOptions": {
        "ecmaVersion": 6,
        "sourceType": "module",
        "ecmaFeatures": {
            "jsx": true,
            "modules": true,
            "experimentalObjectRestSpread": true
        }
    },
  "rules": {
    "quotes": [
        "warn",
        "double"
    ],
    "no-console": 0,
    "jsx-quotes": [
        "warn",
        "prefer-double"
    ],
    "react/prefer-stateless-function": "off",
    "react/jsx-filename-extension": [ 1, {
         "extensions": [".js", ".jsx"] 
      }
    ]
  }
}